# OWS V3 API
OWS_TOKEN=your_ows_api_token_here
OWS_BASE_URL=https://ows.goszakup.gov.kz

# PostgreSQL
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_strong_password_here
POSTGRES_DB=tender_radar
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
DATABASE_URL=postgresql+asyncpg://postgres:your_strong_password_here@postgres:5432/tender_radar

# Redis
REDIS_URL=redis://redis:6379/0

# JWT
JWT_SECRET=change_this_to_a_random_secret_in_production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# App
APP_ENV=development
APP_HOST=0.0.0.0
APP_PORT=8000
CORS_ORIGINS=http://localhost:3000

# ETL Settings
ETL_BACKFILL_DATE_FROM=2024-01-01
ETL_BACKFILL_DATE_TO=2025-12-31
ETL_RATE_LIMIT_DELAY=0.5
ETL_MAX_RETRIES=3
ETL_PAGE_SIZE=50

# Celery
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1
